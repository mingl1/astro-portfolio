<style>
  a {
    color: inherit;
    text-decoration: none;
  }

  .narrow-width {
    margin: 0 auto;
    max-width: 540px;
    padding: 0 25px;
  }

  @media (min-width: 992px) {
    .narrow-width {
      max-width: 1050px;
    }
  }

  @media (min-width: 1050px) {
    .narrow-width {
      max-width: 1462px;
    }
  }

  .alpha,
  h1,
  h2 {
    font-size: 1.25rem;
    font-weight: 700;
    line-height: 1.4;
  }

  @media (min-width: 992px) {
    .alpha,
    h1,
    h2 {
      font-size: 2rem;
    }
  }

  .beta,
  h3,
  h4 {
    font-size: 1.2rem;
  }

  .radio-area,
  header {
    position: relative;
  }

  .radio-area {
    align-items: flex-start;
    display: flex;
  }

  .dots-container {
    display: flex;
    justify-content: center;
  }

  @media (min-width: 580px) {
    .dots-container {
      justify-content: space-between;
    }
  }

  .dots {
    background-image: radial-gradient(
      transparent 30%,
      #fff calc(30% + 0.5px),
      #fff calc(30% + 1px),
      transparent calc(30% + 2px)
    );
    background-position: -5px -5px;
    background-size: 22px 22px;
    content: "";
    display: none;
    height: 232px;
    margin-top: 100px;
    width: 298px;
  }

  @media (-webkit-min-device-pixel-ratio: 2), (min-resolution: 192dpi) {
    .dots {
      background-image: radial-gradient(
        transparent 30%,
        #fff calc(30% + 0.5px),
        #fff calc(30% + 1px),
        transparent calc(30% + 1.5px)
      );
    }
  }

  .dots:first-child {
    display: block;
  }

  @media (min-width: 580px) {
    .dots {
      width: 232px;
    }

    .dots:nth-child(2) {
      display: block;
    }
  }

  @media (min-width: 992px) {
    .dots {
      display: block;
      margin-top: 55px;
    }
  }

  body.is-playing-radio .dots {
    background-image: radial-gradient(
      #fff calc(30% + 1px),
      transparent calc(30% + 2px)
    );
  }

  @media (-webkit-min-device-pixel-ratio: 2), (min-resolution: 192dpi) {
    body.is-playing-radio .dots {
      background-image: radial-gradient(
        #fff calc(30% + 1px),
        transparent calc(30% + 1.5px)
      );
    }
  }

  .top-area {
    align-items: center;
    display: flex;
    margin-top: 50px;
    min-height: 500px;
  }

  @media (min-width: 992px) {
    .top-area {
      height: calc(100vh - 178px);
      margin-top: 0;
    }
  }

  .content-group {
    padding-bottom: 4em;
    width: 100%;
  }

  .residents-section {
    border-top: 1px solid #fff;
  }

  .residents-section-inner {
    padding-bottom: 4em;
    padding-top: 4em;
  }

  @media (min-width: 992px) {
    .residents-section-inner {
      display: flex;
    }
  }

  .residents-section-inner h3 {
    margin: 0 0 2em;
    width: 232px;
  }

  @media (min-width: 992px) {
    .residents-section-inner h3 {
      margin: 0;
    }
  }

  .residents-list {
    -webkit-font-smoothing: antialiased;
    font-size: 0.8em;
    line-height: 1.4;
    list-style-type: none;
    padding: 0;
  }

  @media (min-width: 580px) {
    .residents-list {
      -webkit-column-count: 2;
      column-count: 2;
      -webkit-column-gap: 25px;
      column-gap: 25px;
    }
  }

  @media (min-width: 992px) {
    .residents-list {
      -webkit-column-count: 3;
      column-count: 3;
      margin: 0 0 0 25px;
      width: calc(100% - 237px);
    }
  }

  .residents-list a:hover {
    text-decoration: underline;
  }
</style>
