        <div class="schedule-container">
          <div class="schedule-current">
            <div
              aria-live="polite"
              class="schedule-title alpha is-live"
              role="status"
            >
              <a target="_blank" href="https://github.com/mingl1">mingl1</a>
            </div>
          </div>
          <div class="schedule-upcoming">
            <div class="time-container is-detailed">
              <div class="time-explained">Junior, 3.91</div>
              <Age client:only="react" />
            </div><div class="schedule-next-title">CSE & AMS @ SBU</div>
          </div>
        </div>
      </div>
      <div class="dots-container">
        <MyCalendar client:only="react" />
      </div>
    </div>
  </section>
</BaseLayout>

